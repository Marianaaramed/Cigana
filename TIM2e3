/////
// Programa principal

int main(void) {
    telaPrincipal();
    telaSobre();
    telaEquipe();
    telaMenuUsuario();
    telaCadastrarUsuario();
    telaPesquisarUsuario();
    telaAlterarUsuario();
    telaExcluirUsuario();
    telaMenuConsultor();
    telaCadastrarConsultor();
    telaPesquisarConsultor();
    telaAlterarConsultor();
    telaExcluirConsultor();
    telaMenuOraculo();
    telaCadastrarOraculo();
    telaAlterarOraculo();
    telaPesquisarOraculo();
    telaExcluirOraculo();
    return 0;
}



