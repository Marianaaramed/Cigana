    printf("///                  Código do Oráculo:      ");
    scanf("%[A-Z0-9]", codOraculo);
    getchar();
    printf("///                  Tipo do Oráculo:        ");
    scanf("%[A-ZÁÉÍÓÚÂÊÔÇÀÃÕ a-záéíóúâêôçàãõ0-9]", tipoOraculo);
    getchar();
    printf("///                  Duração:       ");
    scanf("%[0-9]", horario);
    printf("///                  Data da Criação (dd/mm/aaaa):     ");
    scanf("%[0-9/]", criacao);
    getchar();
